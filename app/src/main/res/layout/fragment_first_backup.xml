<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:showIn="@layout/activity_main"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="in.kuduvai.cachii.kuduvai.FirstFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/data"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/hand_amount"
                            android:textSize="@dimen/activity_number_size"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Amount in hand"
                            android:textColor="#fff"

                            android:gravity="center"
                            android:id="@+id/hand_amount_text"
                            android:textSize="@dimen/activity_text_size"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                    >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/stock_count"
                            android:textSize="@dimen/activity_number_size"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Stock"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/stock_number_text"
                            android:textSize="@dimen/activity_text_size"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/can_delivery_count"
                            android:textSize="@dimen/activity_number_size"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Delivery count"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/delivery_count_text"
                            android:textSize="@dimen/activity_text_size"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/can_delivery_empty_count"
                            android:textSize="@dimen/activity_number_size"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Empty Count"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/empty_can_count"
                            android:textSize="@dimen/activity_text_size"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"

            android:layout_below="@+id/data"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/data"
                android:id="@+id/relativeLayout"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:layout_width="0dp"
                    android:src="@drawable/cart"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Place order"
                    android:background="@color/white"
                    android:textColor="#fff"
                    android:id="@+id/btnPlaceOrder"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <View
                    android:layout_width="2dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="match_parent"/>


                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/truck"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:background="@color/white"
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btndelivered"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/relativeLayout"
                android:id="@+id/relativeLayout1"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Export"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/wallet"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="20dp"
                    android:background="@color/white"
                    android:textColor="#fff"
                    android:id="@+id/btnExport"
                    />

                <View
                    android:layout_width="2dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="New Purchase"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/report"
                    android:background="@color/white"
                    android:textColor="#fff"
                    android:id="@+id/btnNewPurchase"
                    />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>