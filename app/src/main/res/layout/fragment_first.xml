<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:showIn="@layout/activity_main"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="in.kuduvai.cachii.kuduvai.FirstFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/data"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/hand_amount"
                            android:textSize="@dimen/activity_number_size"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Amount in hand"
                            android:textColor="#fff"

                            android:gravity="center"
                            android:id="@+id/hand_amount_text"
                            android:textSize="@dimen/activity_text_size"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                    >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/stock_count"
                            android:textSize="@dimen/activity_number_size"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Stock"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/stock_number_text"
                            android:textSize="@dimen/activity_text_size"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/can_delivery_count"
                            android:textSize="@dimen/activity_number_size"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Delivery count"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/delivery_count_text"
                            android:textSize="@dimen/activity_text_size"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/can_delivery_empty_count"
                            android:textSize="@dimen/activity_number_size"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Empty Count"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/empty_can_count"
                            android:textSize="@dimen/activity_text_size"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="8"
            android:rowCount="8">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:src="@drawable/cart"
                    android:layout_marginTop="20dp"

                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:background="@color/white"
                    android:textColor="#fff"
                    android:id="@+id/btnPlaceOrder"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book Now"
                    android:gravity="center"
                    android:background="#fff"
                    />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/truck"
                    android:layout_marginTop="20dp"

                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:background="@color/white"
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btndelivered"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:gravity="center"
                        android:background="#fff"
                        android:layout_marginLeft="10dp"
                        />

                    </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export"
                    android:src="@drawable/wallet"

                    android:background="@color/white"
                    android:textColor="#fff"
                    android:id="@+id/btnExport"
                    />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:gravity="center"
                        android:background="#fff"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="New Purchase"
                    android:src="@drawable/report"
                    android:background="@color/white"
                    android:textColor="#fff"
                    android:id="@+id/btnNewPurchase"
                    />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Report"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="#fff"
                        />

                    </LinearLayout>

            </LinearLayout>
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>